@model MyTraceCare.ViewModels.AdminUserViewModel
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    bool isEdit = !string.IsNullOrEmpty(Model.Id);
    ViewData["Title"] = isEdit ? "Edit User" : "Create User";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Full Name</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Role</label>
        <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()"
                class="form-select"></select>
    </div>

    <div class="mb-3">
        <label>Gender</label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"
                class="form-select"></select>
    </div>

    <div class="mb-3">
        <label>Date of Birth</label>
        <input asp-for="DOB" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label>@(isEdit ? "New Password (optional)" : "Password")</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <button class="btn btn-dark">
        @(isEdit ? "Update User" : "Create User")
    </button>

    <a class="btn btn-secondary ms-2" href="/AdminDashboard/Index">Cancel</a>
</form>
