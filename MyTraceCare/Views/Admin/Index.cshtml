@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row g-3">

    <div class="col-md-3">
        <div class="card shadow-sm text-center p-3">
            <h6 class="text-muted">PATIENTS</h6>
            <h3>@ViewBag.PatientCount</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center p-3">
            <h6 class="text-muted">CLINICIANS</h6>
            <h3>@ViewBag.ClinicianCount</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center p-3">
            <h6 class="text-muted">ADMINS</h6>
            <h3>@ViewBag.AdminCount</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center p-3">
            <h6 class="text-muted">ALERTS</h6>
            <h3>@ViewBag.AlertCount</h3>
        </div>
    </div>

</div>

<p class="mt-4 text-muted">
    Use the left navigation menu to create users or view system alerts.
</p>
