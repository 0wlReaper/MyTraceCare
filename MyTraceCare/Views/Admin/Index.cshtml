@model List<MyTraceCare.Models.User>
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<h2 class="mb-3">Users</h2>

<a class="btn btn-dark mb-3" href="/AdminDashboard/CreateUser">
    + Create User
</a>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th style="width:180px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>
                    <a class="btn btn-sm btn-primary"
                       href="/AdminDashboard/CreateUser?id=@u.Id">
                        Edit
                    </a>
                    <a class="btn btn-sm btn-danger"
                       href="/AdminDashboard/DeleteUser/@u.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
