@model List<MyTraceCare.Models.Alert>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "System Alerts";
}

<h2 class="mb-3">System Alerts</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Title</th>
            <th>Risk</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.CreatedAt.ToLocalTime()</td>
                <td>@a.User?.FullName</td>
                <td>@a.Title</td>
                <td>
                    <span class="badge bg-@(a.RiskLevel == "High" ? "danger" : "warning")">
                        @a.RiskLevel
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
