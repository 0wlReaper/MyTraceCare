@model List<MyTraceCare.Models.ClinicianPatient>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Clinician–Patient Assignments";

    var clinicians = ViewBag.Clinicians as List<MyTraceCare.Models.User> ?? new();
    var patients = ViewBag.Patients as List<MyTraceCare.Models.User> ?? new();
}

<h2 class="mb-3">Clinician–Patient Assignments</h2>

<div class="card shadow-sm border-0 mb-4" style="border-radius:18px;">
    <div class="card-body">
        <h5 class="mb-3">Create new assignment</h5>
        <form method="post" asp-action="Add">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Clinician</label>
                    <select name="clinicianId" class="form-select">
                        @foreach (var c in clinicians)
                        {
                            <option value="@c.Id">@c.FullName (@c.Email)</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Patient</label>
                    <select name="patientId" class="form-select">
                        @foreach (var p in patients)
                        {
                            <option value="@p.Id">@p.FullName (@p.Email)</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <button class="btn btn-dark mt-3">Add assignment</button>
                </div>
            </div>
        </form>
    </div>
</div>

<h5 class="mb-2">Existing assignments</h5>

@if (!Model.Any())
{
    <div class="alert alert-info">No assignments created yet.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Clinician</th>
                <th>Clinician Email</th>
                <th>Patient</th>
                <th>Patient Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cp in Model)
            {
                <tr>
                    <td>@cp.Clinician?.FullName</td>
                    <td>@cp.Clinician?.Email</td>
                    <td>@cp.Patient?.FullName</td>
                    <td>@cp.Patient?.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
