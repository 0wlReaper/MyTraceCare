@model List<MyTraceCare.Models.PatientDataFile>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Patient Data Files";
}

<h2 class="mb-3">Patient Data Files</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No patient data files found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Patient</th>
                <th>Device Id</th>
                <th>Date</th>
                <th>File Path</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@(f.User?.FullName ?? "-")</td>
                    <td>@f.DeviceId</td>
                    <td>@f.Date.ToString("dd MMM yyyy")</td>
                    <td>@f.FilePath</td>
                </tr>
            }
        </tbody>
    </table>
}
